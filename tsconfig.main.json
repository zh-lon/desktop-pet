{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": false
  },
  "include": ["src/main.ts", "src/preload.ts"],
  "exclude": ["node_modules", "src/**/*.tsx", "src/**/*.jsx"]
}
